#include<stdio.h>
void reverseArrays(int a[], int size);
int main(){
	int a[]={1,2,3,4,5,6,7};
	reverseArrays(a, 6);
	return 0;
}

void reverseArrays(int a[], int size){
	//int size= (int)((float)sizeof(a)/(float)sizeof(int));

	//int b[size]
	int i;
	for(i=0; i<size+1; i++){
		//b[size-i]=a[i]
		printf("%d ",a[size-i]);
	}
}
