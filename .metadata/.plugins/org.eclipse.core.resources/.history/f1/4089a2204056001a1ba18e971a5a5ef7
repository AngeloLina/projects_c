#include<stdio.h>
void reverseArrays(int a[]);
int main(){
	int a[]={1,2,3};
	reverseArrays(a);
	return 0;
}

void reverseArrays(int a[]){
	int size=sizeof(a)/sizeof(a[0]);
	//int b[size]
	for(int i=0; i<size; i++){
		//b[size-i]=a[i]
		printf(a[size-i]);
	}
}
