#include<stdio.h>
void reverseArrays(int a[]);
int main(){
	int a[]={1,2,3,4,5,6,7};
	reverseArrays(a);
	return 0;
}

void reverseArrays(int a[]){
	int size= (int)sizeof(a)/sizeof(a[0]);
	printf("%d", size);
	//int b[size]
	int i;
	for(i=0; i<size; i++){
		//b[size-i]=a[i]
		printf("%d",a[i]);
	}
}
